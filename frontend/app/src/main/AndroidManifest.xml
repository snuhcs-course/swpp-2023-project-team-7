<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SHAReader"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SHAReader">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ReaderActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SHAReader">
            <intent-filter>
                <action android:name="android.intent.action.READER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SummaryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SHAReader">
            <intent-filter>
                <action android:name="android.intent.action.SUMMARY" />
            </intent-filter>
        </activity>

        <activity
            android:name=".QuizActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SHAReader">
            <intent-filter>
                <action android:name="android.intent.action.QUIZ" />
            </intent-filter>
        </activity>

    </application>

</manifest>